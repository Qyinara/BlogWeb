@model Blog.Entities.Models.Concrete.Category

@{
    ViewBag.Title = "Add New Category";
}

<h2>Add New Category</h2>

<form asp-action="AddCategory" method="post" enctype="multipart/form-data">
    @* Özelleştirilmiş hata mesajını burada göstereceğiz *@
    <div class="form-group">
        <label asp-for="CategoryName"></label> <!-- Doğru alan ismi CategoryName -->
        <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="CategoryName" class="text-danger"></span> <!-- Doğru alan ismi CategoryName -->
    </div>

    <button type="submit" class="btn btn-primary">Add Category</button>
    <a href="@Url.Action("Categories", "Admin")" class="btn btn-secondary">Back to Categories</a>
</form>
