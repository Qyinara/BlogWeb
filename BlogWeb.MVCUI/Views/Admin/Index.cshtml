@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center">Admin Dashboard</h2>
    <p class="lead text-center">Manage your blog with ease.</p>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card border-primary shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-folder-plus display-4 text-primary"></i>
                    </div>
                    <h5 class="card-title">Manage Categories</h5>
                    <p class="card-text">Create, update, and delete categories for your blog posts.</p>
                    <a href="@Url.Action("Categories", "Admin")" class="btn btn-primary">Go to Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-file-earmark-post display-4 text-success"></i>
                    </div>
                    <h5 class="card-title">Manage Posts</h5>
                    <p class="card-text">Create, update, and delete blog posts.</p>
                    <a href="@Url.Action("Posts", "Admin")" class="btn btn-success">Go to Posts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-people display-4 text-warning"></i>
                    </div>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View, update, and delete users.</p>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-warning text-white">Go to Users</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-body i {
        font-size: 3rem;
    }

    .btn {
        border-radius: 50px;
    }
</style>
