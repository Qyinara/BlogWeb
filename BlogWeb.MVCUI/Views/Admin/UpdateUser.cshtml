    @model BlogWeb.MVCUI.Models.UserViewModel

    @{
        ViewBag.Title = "Update User";
    }

    <h2>Update User</h2>

    <form asp-action="UpdateUser" method="post">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mail"></label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePhotoUrl"></label>
            <input asp-for="ProfilePhotoUrl" class="form-control" />
            <span asp-validation-for="ProfilePhotoUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role"></label>
            <select asp-for="Role" class="form-control">
                <option value="Admin">Admin</option>
                <option value="User">User</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-primary">Update</button>
    </form>

    <div>
        <a asp-action="Users">Back to Users</a>
    </div>
