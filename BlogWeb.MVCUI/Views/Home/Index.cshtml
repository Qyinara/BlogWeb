@using X.PagedList;
@using X.Web.PagedList;
@model IPagedList<BlogWeb.MVCUI.Models.PostViewModel>

<h2>Latest Posts</h2>
<style>
    .avatar-sm {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }

</style>
<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card mb-4 card-hover">
                <div class="row g-0">
                    <!-- Image -->
                    <a href="@Url.Action("PostDetails", "Home", new { id = post.Id })" class="col-md-6 col-12 bg-cover img-left-rounded" style="background-image: url(@post.PostImageURL);">
                        <img src="@post.PostImageURL" class="img-fluid d-md-none invisible" alt="@post.Title">
                    </a>
                    <div class="col-md-6 col-12">
                        <!-- Card Body -->
                        <div class="card-body">
                            <a href="#" class="badge bg-warning mb-3">@post.Category.CategoryName</a>
                            <h1 class="mb-4">
                                <a href="@Url.Action("PostDetails", "Home", new { id = post.Id })" class="text-inherit">
                                    @post.Title
                                </a>
                            </h1>
                            <p>@post.Content</p>
                            <!-- Media Content -->
                            <div class="row align-items-center g-0 mt-7">
                                
                                <div class="col-auto">
                                    <img src="~/images/profilephoto/@post.Author.ProfilePhotoUrl" alt="@post.Author.UserName" class="rounded-circle avatar-sm me-2">
                                </div>
                                <div class="col lh-1">
                                    <h5 class="mb-1">@post.Author.UserName</h5>
                                    <p class="fs-6 mb-0">@post.CreateDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
                                </div>
                                <div class="col-auto">
                                    <span class="text-muted d-flex align-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-chat-dots me-1" viewBox="0 0 16 16">
                                            <path d="M5 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                                            <path d="m2.165 15.803.02-.004c1.83-.363 2.948-.842 3.468-1.105A9.06 9.06 0 0 0 8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6a10.437 10.437 0 0 1-.524 2.318l-.003.011a10.722 10.722 0 0 1-.244.637c-.079.186.074.394.273.362a21.673 21.673 0 0 0 .693-.125zm.8-3.108a1 1 0 0 0-.287-.801C1.618 10.83 1 9.468 1 8c0-3.192 3.004-6 7-6s7 2.808 7 6c0 3.193-3.004 6-7 6a8.06 8.06 0 0 1-2.088-.272 1 1 0 0 0-.711.074c-.387.196-1.24.57-2.634.893a10.97 10.97 0 0 0 .398-2z" />
                                        </svg>
                                        @post.Comments.Count()
                                    </span>
                                    <span class="text-muted d-flex align-items-center mt-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-heart-fill me-1" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 15S3 9.8 3 6a5 5 0 0 1 10 0c0 3.8-5 9-5 9zM5.654 3.856a3 3 0 0 0-4.246 0 3 3 0 0 0 0 4.246L8 12.243l6.592-4.141a3 3 0 0 0-4.246-4.246l-2.133 2.134-2.133-2.134z" />
                                        </svg>
                                        @post.PostLikes.Count()
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-center my-4">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
